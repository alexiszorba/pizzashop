{% extends '::base.html.twig' %}

{% block body -%}
<h1>Details</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Aantal</th>
            <td>{{ entity.aantal }}</td>
        </tr>
        <tr>
            <th>Prijs</th>
            <td>{{ entity.prijs }}</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>{{ entity.type }}</td>
        </tr>
        <tr>
            <th>Size</th>
            <td>{{ entity.size }}</td>
        </tr>
        <tr>
            <th>Pizza</th>
            <td>{{ entity.pizza }}</td>
        </tr>
    <th>Promotie</th>
    <td>{{ entity.promotie }}</td>
    <tr>
    </tr>
</tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('details') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('details_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
