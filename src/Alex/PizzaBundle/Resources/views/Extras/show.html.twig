{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Extras</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Omschrijving</th>
                <td>{{ entity.omschrijving }}</td>
            </tr>
            <tr>
                <th>Kost</th>
                <td>{{ entity.kost }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('extras') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('extras_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
