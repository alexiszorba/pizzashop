{% extends 'AlexPizzaBundle::layout.html.twig' %}

{% block content %}

{% block body -%}
    <h1>Onze Pizzas</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Datum</th>
                <th>Levering</th>
                <th>Leveringskost</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('bestelling_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.datum %}{{ entity.datum|date('Y-m-d H:i') }}{% endif %}</td>
                <td>{{ entity.levering|date('Y-m-d H:i') }}</td>
                <td>{{ entity.leveringskost }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('bestelling_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('bestelling_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('bestelling_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
{% endblock %}
